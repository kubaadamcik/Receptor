<UserControl x:Class="Receptor.View.UserControls.SearchBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Receptor.View.UserControls"
             mc:Ignorable="d"
             Height="45" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="50"></ColumnDefinition>
        </Grid.ColumnDefinitions>



        <Label HorizontalAlignment="Left" VerticalAlignment="Center" Width="250" Height="45"
               VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Content="Vyhledat recepty..."
               Opacity="0.7" Padding="10, 0, 0, 0" FontSize="13" x:Name="SearchLabel"></Label>

        <TextBox HorizontalAlignment="Center" VerticalAlignment="Center" Width="250" Height="45"
                 Background="Transparent" BorderBrush="Transparent" GotFocus="HidePlaceholder"
                 VerticalContentAlignment="Center" FontSize="13" Padding="10, 0, 0, 0"
                 LostFocus="ShowPlaceholder"></TextBox>

        <Image Grid.Column="1" Source="pack://application:,,,/Images/Search-icon.png" Width="30" Height="30"></Image>

        <Button Grid.Column="1" Background="Transparent" BorderThickness="1, 0, 0, 0" BorderBrush="Black"></Button>


    </Grid>
</UserControl>
